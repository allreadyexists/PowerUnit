{
  "NLog": {
    "autoReload": true,
    "autoShutdown": true,
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      },
      {
        "assembly": "NLog.Web.AspNetCore"
      }
    ],
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${basedir}\\DebugLogs\\current.log",
        "archiveFileName": "${basedir}\\DebugLogs\\{#}.log",
        "archiveNumbering": "DateAndSequence",
        "archiveDateFormat": "yyyyMMdd",
        "maxArchiveFiles": 100,
        "archiveAboveSize": 131072,
        "concurrentWrites": true,
        "keepFileOpen": true,
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "timestamp",
              "layout": "${date:format=HH\\:mm\\:ss.fff}"
            },
            {
              "name": "level",
              "layout": "${level:upperCase=true}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "message",
              "layout": "${message:raw=true}"
            },
            {
              "name": "properties",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeallproperties": "true"
              }
            }
          ]
        }
      },
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logfile"
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logconsole"
      } //,
      //{
      //  "logger": "Microsoft.*",
      //  "minLevel": "Trace",
      //  "writeTo": "logfile"
      //}
    ]
  },
  "IEC104ServersOptions": {
    "Servers": [
      {
        "ServerName": "First Server",
        "Port": 2404,
        "KeepAliveOptions": {
          "KeepAlive": false,
          "TcpKeepAliveTime": 600,
          "TcpKeepAliveInterval": 60
        },
        "ChannelLayerOption": {
          "UseFragmentSend": true
        },
        "ApplicationLayerOption": {
          "CommonASDUAddress": 1,
          "CheckCommonASDUAddress": true
        }
      },
      {
        "ServerName": "Second Server",
        "Port": 2405,
        "KeepAliveOptions": {
          "KeepAlive": false,
          "TcpKeepAliveTime": 600,
          "TcpKeepAliveInterval": 60
        },
        "ChannelLayerOption": {
          "UseFragmentSend": true
        },
        "ApplicationLayerOption": {
          "CommonASDUAddress": 1,
          "CheckCommonASDUAddress": true
        }
      }
    ]
  },
  "IEC104ServerDbOptions": {
    "Host": "localhost", //"host.docker.internal",
    "Port": 6543,
    "Database": "PUDB",
    "User": "postgres",
    "Password": "postgres"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  }
}