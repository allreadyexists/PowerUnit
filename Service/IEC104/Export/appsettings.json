{
  "NLog": {
    "autoReload": true,
    "autoShutdown": true,
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      },
      {
        "assembly": "NLog.Web.AspNetCore"
      }
    ],
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${basedir}\\DebugLogs\\current.log",
        "archiveFileName": "${basedir}\\DebugLogs\\{#}.log",
        "archiveNumbering": "DateAndSequence",
        "archiveDateFormat": "yyyyMMdd",
        "maxArchiveFiles": 100,
        "archiveAboveSize": 131072,
        "concurrentWrites": true,
        "keepFileOpen": true,
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "timestamp",
              "layout": "${date:format=HH\\:mm\\:ss.fff}"
            },
            {
              "name": "level",
              "layout": "${level:upperCase=true}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "message",
              "layout": "${message:raw=true}"
            },
            {
              "name": "properties",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeallproperties": "true"
              }
            }
          ]
        }
      },
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      } //,
      //{
      //  "logger": "Microsoft.*",
      //  "minLevel": "Trace",
      //  "writeTo": "logfile"
      //}
    ]
  },
  "ServiceName": "IEC104Export002",
  "DbProvider": "PostgreSql", // "PostgreSql", "Sqlite"
  "GenerateMode": "Block", // Single, Random, Block
  "IEC104ServerDbSqliteOptions": {
    "Database": "PUIEC104SERVERDB.db"
  },
  "IEC104ServerPostgreSqlDbOptions": {
    "Host": "localhost", //"host.docker.internal",
    "Port": 6543,
    "Database": "PUIEC104SERVERDB",
    "User": "postgres",
    "Password": "postgres"
  },
  "PrometheusOptions": {
    "Endpoints": [ "http://127.0.0.1:5000/" ]
  }
  /*,
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5000"
      }
    }
  }*/
}